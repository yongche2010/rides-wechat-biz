.header{
  display: flex;
  width: 100%;
  padding: 20px 20rpx;
  background-color: #0066ff;
  color: #ffffff;
}

.header-left{
  width: 710rpx;
  text-align: center
}

.header-left__num{
  font-size: 80rpx;
  margin-top: 15px
}

.middle-left__num{
  font-size: 50rpx;
}

.middle{
  width: 710rpx;
  padding: 20px 20rpx;
  background-color: #ffffff;
}

.middle-content , .middle-content__left{
  display: flex;
  align-items: center
}

.middle-content{
  justify-content: space-between
}

.middle-content .van-button{
  height: 40px;
  line-height: 38px
}

.dis{
  margin-right: 10rpx
}

.footer{
  background-color: #ffffff;
}

.footer-item{
  width: 710rpx;
  padding: 10px 20rpx
}

.item-top{
  display: flex;
  margin-top: 10px
}

.item-top-left{
  width: 70%
}

.item-top-right{
  width: 30%;
  text-align: right
}

.item-bottom-left{
  width: 50%
}

.item-bottom-right{
  width: 50%;
  text-align: right
}
