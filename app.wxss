.gz-cell-group {
  margin-top: 10px;
}

.gz-grade-tag {
  font-size: 28rpx;
  background: #fd6d33;
  padding: 4px 20rpx;
  border-radius: 20px;
}

.gz-grade-tag.van-hairline--surround::after {
  border-radius: 20px;
  border: 0 solid #ffffff;
  border-width: 1px;
}

/* 优惠字体 */
.tag-first {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  height: 28rpx;
  width: 28rpx;
  background-color: #fbb143;
}

.tag-full {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  height: 28rpx;
  width: 28rpx;
  background-color: #fb4830;
}

.tag-te {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  height: 28rpx;
  width: 28rpx;
  background-color: #02afff;
}


/* 公共按钮样式 */
.wrap .van-button{
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #ffffff;
  border: none
}

