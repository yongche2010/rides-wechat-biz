/**app.wxss**/
@import './assets/styles/iconfont.wxss';
@import 'miniprogram_npm/vant-weapp/common/index.wxss';

page {
  -webkit-font-smoothing: antialiased;
  font-family: 'PingHei', 'Helvetica Neue', 'Helvetica', 'Arial', 'Verdana',
    'sans-serif';
  font-size: 28rpx;
  background: #f4f6f9;
  color: #333333;
  box-sizing: border-box;
}

.container {
  min-height: 100vh;
  overflow: hidden;
  box-sizing: border-box;
}

.page-wrapper {
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
/* 公用字体 */
.font-32-c{
  font-size: 32rpx;
  color: #333333
}

.font-32-r{
  font-size: 32rpx;
  color: #fd4830
}

